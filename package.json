{
  "name": "eventos-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run eslint",
    "test": "cross-env NODE_ENV=test npm-run-all mocha",
    "watch": "npm-run-all --parallel watch:*",
    "watch:test": "npm run mocha -- --watch",
    "watch:lint": "onchange '**/*.js' -- npm run eslint",
    "coverage": "cross-env NODE_ENV=test npm-run-all coverage:** ",
    "coverage:cover": "cross-env NODE_ENV=test nyc npm run mocha",
    "coverage:coveralls": "npm run coverage:cover && nyc report --reporter=text-lcov | coveralls",
    "coverage:clean": "rm -rf ./coverage",
    "start": "cross-env NODE_ENV=prod ./node_modules/.bin/babel-node src",
    "dev": "cross-env NODE_ENV=dev nodemon ./node_modules/.bin/babel-node src",
    "eslint": "eslint --cache --ext .js src test",
    "eslint:fix": "eslint --cache --fix  --ext .js src test",
    "mocha": "cross-env NODE_ENV=test mocha test/**/*.spec.js --require babel-register --reporter list"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendbr/eventos-api.git"
  },
  "author": "angeliski@hotmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frontendbr/eventos-api/issues"
  },
  "homepage": "https://github.com/frontendbr/eventos-api#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.17.2",
    "config": "^1.26.1",
    "cors": "^2.8.4",
    "express": "^4.15.3",
    "express-authentication": "^0.3.2",
    "express-session": "^1.15.3",
    "express-validation": "^0.4.5",
    "firebase": "^4.1.3",
    "firebase-admin": "^5.0.1",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.5",
    "morgan": "^1.8.0",
    "passport": "^0.3.2",
    "passport-github2": "^0.1.10",
    "swagger-ui-express": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-istanbul": "^0.12.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "chai-http": "^2.0.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.1.0",
    "eslint": "^4.9.0",
    "eslint-plugin-import": "^2.8.0",
    "firebase-mock": "^1.1.5",
    "mocha": "^2.4.5",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0",
    "sinon": "^2.3.8",
    "sinon-chai": "^2.12.0",
    "standard": "^10.0.3"
  }
}
